function install_gpg() {
    read -p "generate new gpg-key? " answer
    if [[ "$answer" == "y" || "$answer" == "Y" ]]; then
        gpg --full-generate-key
    fi
    echo "default-cache-ttl 3600" > ~/.gnupg/gpg-agent.conf  # Кэш на 1 час
    echo "max-cache-ttl 21600" >> ~/.gnupg/gpg-agent.conf
    echo "gpgconf --kill gpg-agent" >> ~/.zshrc
    echo "gpgconf --launch gpg-agent" >> ~/.zshrc
    else
       echo "gpg pass"
}
function newsecret() {
    local file="passwd"
    read -p "repeat email" email
    nano /home/$USER/
    gpg --quiet --batch --yes --encrypt --recipient "$email" --output $file.gpg $file
    shred -u $file
    chmod 700 $file.gpg
    echo "File ~/$file.gpg was created. Permissions 700 and it cannot be deleted"
}

function set_aliases() {
    echo "seurce $PWD/seq_aliases.sh"
}

install_gpg()
